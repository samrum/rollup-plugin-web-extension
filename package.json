{
  "name": "@samrum/rollup-plugin-web-extension",
  "version": "1.0.0",
  "description": "A rollup plugin for generating cross platform web extensions",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "types/index.d.ts",
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist",
    "types",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --noEmit && rollup -c",
    "dev": "rollup -c -w",
    "lint": "prettier --write --loglevel warn .",
    "test": "jest",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samrum/rollup-plugin-web-extension.git"
  },
  "keywords": [
    "rollup",
    "chrome",
    "web",
    "browser",
    "chrome",
    "firefox",
    "edge",
    "extension"
  ],
  "author": "Ruben Medina",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samrum/rollup-plugin-web-extension/issues"
  },
  "homepage": "https://github.com/samrum/rollup-plugin-web-extension#readme",
  "devDependencies": {
    "@rollup/plugin-sucrase": "^4.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.4.9",
    "husky": ">=6",
    "jest": "^27.0.6",
    "lint-staged": ">=10",
    "prettier": "2.3.2",
    "rollup": "^2.55.1",
    "ts-jest": "^27.0.4",
    "tslib": "^2.3.0",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "rollup": "^2.55.1"
  },
  "dependencies": {
    "@types/chrome": "^0.0.157"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  }
}
